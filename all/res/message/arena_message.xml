<?xml version="1.0" encoding="UTF-8"?>
<messages package="com.moloong.bleach.arena" id="206">
	<!-- bean定义 -->
	<bean name="ArenaInfo" explain="玩家竞技场信息">
		<field class="int" name="rank" explain="竞技场排名"></field>
		<field class="int" name="bestRank" explain="竞技场最高排名"></field>
		<field class="int" name="characterId" explain="上次使用的角色id"></field>
		<field class="int" name="fighting" explain="战斗力"></field>
		<field class="int" name="leftCount" explain="剩余挑战次数"></field>
		<field class="int" name="cdTime" explain="cd剩余秒数"></field>
	</bean>
	
	<bean name="ArenaOpponentInfo" explain="竞技场挑战者信息">
		<field class="int" name="rank" explain="对手竞技场排名"></field>
		<field class="long" name="playerId" explain="对手id"></field>
		<field class="int" name="playerLevel" explain="对手等级"></field>
		<field class="String" name="playerName" explain="对手名字"></field>
		<field class="int" name="characterId" explain="对手角色id"></field>
		<field class="int" name="characterStageLevel" explain="角色阶级"></field>
		<field class="int" name="fighting" explain="对手战斗力"></field>
	</bean>

	<bean name="ArenaDefendInfo" explain="竞技场被挑战纪录">
		<field class="int" name="isWin" explain="0：负，1：胜"></field>
		<field class="String" name="playerName" explain="对手名字"></field>
		<field class="int" name="characterId" explain="对手角色id"></field>		
		<field class="int" name="characterStageLevel" explain="对手角色阶级"></field>
		<field class="int" name="fighting" explain="对手战斗力"></field>		
		<field class="int" name="oldRank" explain="原来的排名"></field>
		<field class="int" name="newRank" explain="现在的排名"></field>
		<field class="int" name="fightTime" explain="发生时间，0：一小时内，其他：几小时前"></field>
	</bean>
	
	<!-- 服务器发送消息 -->
	<message id="101" type="SC" name="ResEnterArena" explain="进入竞技场回复">
		<field class="int" name="result" explain="0：成功，1：等级不足"></field>
	</message>

	<message id="102" type="SC" name="ResArenaOpponentInfo" explain="竞技场对手列表">
		<list class="ArenaOpponentInfo" name="arenaOpponetInfo" explain="竞技场挑战者列表"></list>
	</message>

	<message id="103" type="SC" name="ResStartArena" explain="竞技场对手列表">
		<field class="int" name="result" explain="0：成功，1：等级不足，2：剩余次数不够，3：CD中"></field>
	</message>

	<message id="104" type="SC" name="ResEndArena" explain="竞技场对手列表">
		<field class="int" name="result" explain="0：挑战成功，1：挑战失败"></field>
	</message>
	
	<message id="105" type="SC" name="ResPlayerArenaInfo" explain="玩家竞技场信息">
		<field class="ArenaInfo" name="arenaInfo" explain="玩家竞技场信息"></field>
	</message>

	<message id="110" type="SC" name="ResArenaDefendInfo" explain="竞技场被挑战纪录">
		<list class="ArenaDefendInfo" name="arenaDefendInfo" explain="竞技场被挑战纪录列表"></list>
	</message>

	<message id="111" type="SC" name="ResAddArenaDefendInfo" explain="增加单场竞技场被挑战纪录">
		<field class="ArenaDefendInfo" name="arenaDefendInfo" explain="竞技场被挑战纪录列表"></field>
	</message>
	
	<!-- 服务器接收消息 -->
	<message id="201" type="CS" name="ReqEnterArena" explain="进入竞技场请求">
	</message>

	<message id="202" type="CS" name="ReqChangeArenaOpponent" explain="竞技场刷新对手请求">
	</message>

	<message id="203" type="CS" name="ReqStartArena" explain="竞技场挑战开始请求">
		<field class="long" name="oppPlayerId" explain="对手玩家id"></field>
		<field class="int" name="oppPlayerRank" explain="对手玩家排名"></field>		
		<field class="int" name="characterId" explain="使用的角色的id"></field>
	</message>

	<message id="204" type="CS" name="ReqEndArena" explain="竞技场挑战结束请求">
	</message>
	
	<message id="205" type="CS" name="ReqAddArenaCount" explain="请求增加竞技场挑战次数">
	</message>
	
	<message id="206" type="CS" name="ReqFightNow" explain="请求立即结束cd时间">
	</message>
</messages>